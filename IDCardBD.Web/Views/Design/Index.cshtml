@model IEnumerable<IDCardBD.Web.Models.CardTemplate>

@{
    ViewData["Title"] = "Design Center";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Card Templates</h3>
        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Create New Template
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 20%">Name</th>
                    <th style="width: 30%">Front</th>
                    <th style="width: 30%">Back</th>
                    <th style="width: 10%">Status</th>
                    <th style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <img src="@item.FrontBgPath" alt="Front" class="img-thumbnail" style="max-height: 50px;" />
                        </td>
                        <td>
                            <img src="@item.BackBgPath" alt="Back" class="img-thumbnail" style="max-height: 50px;" />
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Inactive</span>
                            }
                        </td>
                        <td class="project-actions text-right">
                            <form asp-action="ToggleStatus" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                @if (item.IsActive)
                                {
                                    <button type="submit" class="btn btn-warning btn-sm">
                                        <i class="fas fa-ban"></i> Deactivate
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="fas fa-check"></i> Activate
                                    </button>
                                }
                            </form>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id" style="margin-left: 5px;">
                                <i class="fas fa-pencil-alt"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
