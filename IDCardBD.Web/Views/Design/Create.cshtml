@model IDCardBD.Web.Models.CardTemplate

@{
    ViewData["Title"] = "Create Template";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Upload New Template</h3>
            </div>
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Name">Template Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter template name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Front Background Image</label>
                        <div class="custom-file">
                            <input type="file" name="frontImage" class="custom-file-input" id="frontImage" required>
                            <label class="custom-file-label" for="frontImage">Choose file</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Back Background Image</label>
                        <div class="custom-file">
                            <input type="file" name="backImage" class="custom-file-input" id="backImage" required>
                            <label class="custom-file-label" for="backImage">Choose file</label>
                        </div>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" asp-for="IsActive">
                        <label class="form-check-label" asp-for="IsActive">Set as Active</label>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
