@model IEnumerable<IDCardBD.Web.Models.Teacher>

@{
    ViewData["Title"] = "Teacher List";
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Search by name or code..." />
        </div>
        <div class="col-md-2">
            <select name="designation" class="form-control" asp-items="ViewBag.Designations">
                <option value="">-- All Designations --</option>
            </select>
        </div>
        <div class="col-md-2">
            <select name="department" class="form-control" asp-items="ViewBag.Departments">
                <option value="">-- All Departments --</option>
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<form asp-action="SendToPrint" method="post" id="printForm">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Teachers</h3>
            <div class="card-tools">
                <button type="submit" id="btnSendToPrint" class="btn btn-success btn-sm d-none">
                    <i class="fas fa-print"></i> Send to Print (<span id="selectedCount">0</span>)
                </button>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add Teacher
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="selectAll">
                                <label for="selectAll" class="custom-control-label"></label>
                            </div>
                        </th>
                        <th>Photo</th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-designation="@ViewBag.CurrentDesignation" asp-route-department="@ViewBag.CurrentDepartment">
                                Name <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.CodeSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-designation="@ViewBag.CurrentDesignation" asp-route-department="@ViewBag.CurrentDepartment">
                                Code <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.DesignationSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-designation="@ViewBag.CurrentDesignation" asp-route-department="@ViewBag.CurrentDepartment">
                                Designation <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.DepartmentSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-designation="@ViewBag.CurrentDesignation" asp-route-department="@ViewBag.CurrentDepartment">
                                Department <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input item-checkbox" type="checkbox" name="ids" id="chk_@item.Id" value="@item.Id">
                                    <label for="chk_@item.Id" class="custom-control-label"></label>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.PhotoPath))
                                {
                                    <img src="@item.PhotoPath" class="img-circle img-size-32 mr-2" alt="Avatar">
                                }
                            </td>
                            <td>@item.FullName</td>
                            <td>@item.TeacherCode</td>
                            <td>@item.Designation</td>
                            <td>@item.Department</td>
                            <td>@item.PrintStatus</td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fas fa-folder"></i> View
                                </a>
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            const $selectAll = $('#selectAll');
            const $itemCheckboxes = $('.item-checkbox');
            const $btnSendToPrint = $('#btnSendToPrint');
            const $selectedCountDisplay = $('#selectedCount');

            function updateUI() {
                const checkedCount = $('.item-checkbox:checked').length;
                $selectedCountDisplay.text(checkedCount);
                if (checkedCount > 0) {
                    $btnSendToPrint.removeClass('d-none');
                } else {
                    $btnSendToPrint.addClass('d-none');
                }
            }

            $selectAll.on('change', function () {
                $itemCheckboxes.prop('checked', this.checked);
                updateUI();
            });

            $itemCheckboxes.on('change', function () {
                updateUI();
                if (!this.checked) {
                    $selectAll.prop('checked', false);
                } else if ($('.item-checkbox:checked').length === $itemCheckboxes.length) {
                    $selectAll.prop('checked', true);
                }
            });
        });
    </script>
}
