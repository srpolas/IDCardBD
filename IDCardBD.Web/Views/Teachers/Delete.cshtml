@model IDCardBD.Web.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Delete Teacher</h3>
            </div>
            <div class="card-body">
                <p>Are you sure you want to delete this teacher?</p>
                <dl class="row">
                    <dt class="col-sm-4">Full Name</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    
                    <dt class="col-sm-4">Teacher Code</dt>
                    <dd class="col-sm-8">@Model.TeacherCode</dd>
                    
                    <dt class="col-sm-4">Designation</dt>
                    <dd class="col-sm-8">@Model.Designation</dd>
                    
                    <dt class="col-sm-4">Department</dt>
                    <dd class="col-sm-8">@Model.Department</dd>
                </dl>
            </div>
            <div class="card-footer text-right">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
