@model IDCardBD.Web.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add New Student</h3>
            </div>
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label>Profile Picture</label>
                        <div class="custom-file">
                             <input type="file" name="photo" class="custom-file-input" id="customFile">
                             <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" type="email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 form-group">
                             <label asp-for="FathersName">Father's Name</label>
                             <input asp-for="FathersName" class="form-control">
                             <span asp-validation-for="FathersName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                             <label asp-for="MothersName">Mother's Name</label>
                             <input asp-for="MothersName" class="form-control">
                             <span asp-validation-for="MothersName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                             <label asp-for="RollNumber"></label>
                             <input asp-for="RollNumber" class="form-control">
                             <span asp-validation-for="RollNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                             <label asp-for="Grade"></label>
                             <input asp-for="Grade" class="form-control">
                             <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                         <div class="col-md-6 form-group">
                             <label asp-for="Section"></label>
                             <input asp-for="Section" class="form-control">
                             <span asp-validation-for="Section" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                             <label asp-for="BloodGroup"></label>
                             <input asp-for="BloodGroup" class="form-control">
                             <span asp-validation-for="BloodGroup" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="GuardianName"></label>
                        <input asp-for="GuardianName" class="form-control">
                        <span asp-validation-for="GuardianName" class="text-danger"></span>
                    </div>

                     <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
