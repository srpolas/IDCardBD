@model IEnumerable<IDCardBD.Web.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Search by name or roll..." />
        </div>
        <div class="col-md-2">
            <select name="classId" id="FilterClassId" class="form-control" asp-items="ViewBag.Classes">
                <option value="">-- All Classes --</option>
            </select>
        </div>
        <div class="col-md-2">
            <select name="sectionId" id="FilterSectionId" class="form-control" asp-items="ViewBag.Sections">
                <option value="">-- All Sections --</option>
            </select>
        </div>
        <div class="col-md-2">
            <select name="groupId" id="FilterGroupId" class="form-control" asp-items="ViewBag.Groups">
                <option value="">-- All Groups --</option>
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<form asp-action="SendToPrint" method="post" id="printForm">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Students</h3>
            <div class="card-tools">
                <button type="submit" id="btnSendToPrint" class="btn btn-success btn-sm d-none">
                    <i class="fas fa-print"></i> Send to Print (<span id="selectedCount">0</span>)
                </button>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add New
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 5%">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="selectAll">
                                <label for="selectAll" class="custom-control-label"></label>
                            </div>
                        </th>
                        <th style="width: 10%">Photo</th>
                        <th style="width: 20%">
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-classId="@ViewBag.CurrentClassId" asp-route-sectionId="@ViewBag.CurrentSectionId">
                                Full Name <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th style="width: 10%">
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.RollSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-classId="@ViewBag.CurrentClassId" asp-route-sectionId="@ViewBag.CurrentSectionId">
                                Roll <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th style="width: 15%">
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.ClassSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-classId="@ViewBag.CurrentClassId" asp-route-sectionId="@ViewBag.CurrentSectionId">
                                Class Name <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th style="width: 10%">
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.SectionSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-classId="@ViewBag.CurrentClassId" asp-route-sectionId="@ViewBag.CurrentSectionId" asp-route-groupId="@ViewBag.CurrentGroupId">
                                Section <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th style="width: 10%">
                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.GroupSortParm" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-classId="@ViewBag.CurrentClassId" asp-route-sectionId="@ViewBag.CurrentSectionId" asp-route-groupId="@ViewBag.CurrentGroupId">
                                Group <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input student-checkbox" type="checkbox" name="ids" id="chk_@item.Id" value="@item.Id">
                                    <label for="chk_@item.Id" class="custom-control-label"></label>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.PhotoPath))
                                {
                                    <img src="@item.PhotoPath" class="img-circle" style="width: 40px; height: 40px; object-fit: cover;" alt="User Image">
                                }
                                else
                                {
                                    <img src="~/dist/img/avatar.png" class="img-circle" style="width: 40px; height: 40px; object-fit: cover;" alt="User Image">
                                }
                            </td>
                            <td>@item.FullName</td>
                            <td>@item.RollNumber</td>
                            <td>@item.Class?.Name</td>
                <td>@item.Section?.Name</td>
                <td>@item.Group?.Name</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                @if (item.PrintStatus == IDCardBD.Web.Models.PrintStatus.None)
                                {
                                    <span class="badge badge-secondary">New</span>
                                }
                                else
                                {
                                    <span class="badge badge-info">@item.PrintStatus</span>
                                }
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            const $selectAll = $('#selectAll');
            const $studentCheckboxes = $('.student-checkbox');
            const $btnSendToPrint = $('#btnSendToPrint');
            const $selectedCount = $('#selectedCount');

            function updateUI() {
                const checkedCount = $('.student-checkbox:checked').length;
                $selectedCount.text(checkedCount);
                if (checkedCount > 0) {
                    $btnSendToPrint.removeClass('d-none');
                } else {
                    $btnSendToPrint.addClass('d-none');
                }
            }

            $selectAll.on('change', function () {
                $studentCheckboxes.prop('checked', this.checked);
                updateUI();
            });

            $studentCheckboxes.on('change', function () {
                updateUI();
                if (!this.checked) {
                    $selectAll.prop('checked', false);
                } else if ($('.student-checkbox:checked').length === $studentCheckboxes.length) {
                    $selectAll.prop('checked', true);
                }
            });

            $('#FilterClassId').change(function () {
                var classId = $(this).val();
                var $sectionSelect = $('#FilterSectionId');
                var $groupSelect = $('#FilterGroupId');
                
                $sectionSelect.empty();
                $sectionSelect.append('<option value="">-- All Sections --</option>');

                $groupSelect.empty();
                $groupSelect.append('<option value="">-- All Groups --</option>');

                if (classId) {
                    $.getJSON('@Url.Action("GetSectionsByClass", "Sections")', { classId: classId }, function (data) {
                        $.each(data, function (i, item) {
                            $sectionSelect.append($('<option/>', {
                                value: item.id,
                                text: item.name
                            }));
                        });
                    });

                    $.getJSON('@Url.Action("GetGroupsByClass", "AcademicGroups")', { classId: classId }, function (data) {
                        $.each(data, function (i, item) {
                            $groupSelect.append($('<option/>', {
                                value: item.id,
                                text: item.name
                            }));
                        });
                    });
                }
            });
        });
    </script>
}
