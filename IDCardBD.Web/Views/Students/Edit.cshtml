@model IDCardBD.Web.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Edit Student</h3>
            </div>
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="QRCode" />
                <input type="hidden" asp-for="Category" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group text-center">
                        @if (!string.IsNullOrEmpty(Model.PhotoPath))
                        {
                            <img src="@Model.PhotoPath" class="img-circle elevation-2" style="width: 100px; height: 100px; object-fit: cover;" alt="User Image">
                        }
                        else
                        {
                            <img src="~/dist/img/avatar.png" class="img-circle elevation-2" style="width: 100px; height: 100px; object-fit: cover;" alt="User Image">
                        }
                    </div>

                    <div class="form-group">
                        <label>Change Profile Picture</label>
                        <div class="custom-file">
                             <input type="file" name="photo" class="custom-file-input" id="customFile">
                             <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" type="email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 form-group">
                             <label asp-for="FathersName">Father's Name</label>
                             <input asp-for="FathersName" class="form-control">
                             <span asp-validation-for="FathersName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                             <label asp-for="MothersName">Mother's Name</label>
                             <input asp-for="MothersName" class="form-control">
                             <span asp-validation-for="MothersName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                             <label asp-for="RollNumber"></label>
                             <input asp-for="RollNumber" class="form-control">
                             <span asp-validation-for="RollNumber" class="text-danger"></span>
                        </div>
                         <div class="col-md-6 form-group">
                              <label asp-for="ClassId"></label>
                              <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                              <span asp-validation-for="ClassId" class="text-danger"></span>
                         </div>
                    </div>

                    <div class="row">
                          <div class="form-group col-md-4">
                    <label asp-for="SectionId" class="control-label"></label>
                    <select asp-for="SectionId" class="form-control" asp-items="ViewBag.SectionId">
                        <option value="">-- Select Section --</option>
                    </select>
                    <span asp-validation-for="SectionId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="GroupId" class="control-label"></label>
                    <select asp-for="GroupId" id="GroupId" class="form-control" asp-items="ViewBag.GroupId">
                        <option value="">-- Select Group --</option>
                    </select>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>         
                        <div class="col-md-6 form-group">
                             <label asp-for="BloodGroup"></label>
                             <input asp-for="BloodGroup" class="form-control">
                             <span asp-validation-for="BloodGroup" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="GuardianName"></label>
                        <input asp-for="GuardianName" class="form-control">
                        <span asp-validation-for="GuardianName" class="text-danger"></span>
                    </div>

                     <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();

            $('#ClassId').change(function () {
                var classId = $(this).val();
                var $sectionSelect = $('#SectionId');
                var $groupSelect = $('#GroupId');
                
                $sectionSelect.empty();
                $sectionSelect.append('<option value="">-- Select Section --</option>');

                $groupSelect.empty();
                $groupSelect.append('<option value="">-- Select Group --</option>');

                if (classId) {
                    $.getJSON('@Url.Action("GetSectionsByClass", "Sections")', { classId: classId }, function (data) {
                        $.each(data, function (i, item) {
                            $sectionSelect.append($('<option/>', {
                                value: item.id,
                                text: item.name
                            }));
                        });
                    });

                    $.getJSON('@Url.Action("GetGroupsByClass", "AcademicGroups")', { classId: classId }, function (data) {
                        $.each(data, function (i, item) {
                            $groupSelect.append($('<option/>', {
                                value: item.id,
                                text: item.name
                            }));
                        });
                    });
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
