@model IDCardBD.Web.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Edit Employee</h3>
            </div>
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="QRCode" />
                <input type="hidden" asp-for="Category" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group text-center">
                        @if (!string.IsNullOrEmpty(Model.PhotoPath))
                        {
                            <img src="@Model.PhotoPath" class="img-circle elevation-2" style="width: 100px; height: 100px; object-fit: cover;" alt="User Image">
                        }
                        else
                        {
                            <img src="~/dist/img/avatar.png" class="img-circle elevation-2" style="width: 100px; height: 100px; object-fit: cover;" alt="User Image">
                        }
                    </div>

                    <div class="form-group">
                        <label>Change Profile Picture</label>
                        <div class="custom-file">
                             <input type="file" name="photo" class="custom-file-input" id="customFile">
                             <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 form-group">
                             <label asp-for="EmployeeCode"></label>
                             <input asp-for="EmployeeCode" class="form-control">
                             <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                        </div>
                         <div class="col-md-6 form-group">
                             <label asp-for="Department"></label>
                             <input asp-for="Department" class="form-control">
                             <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                             <label asp-for="Designation"></label>
                             <input asp-for="Designation" class="form-control">
                             <span asp-validation-for="Designation" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                             <label asp-for="BloodGroup"></label>
                             <input asp-for="BloodGroup" class="form-control">
                             <span asp-validation-for="BloodGroup" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
