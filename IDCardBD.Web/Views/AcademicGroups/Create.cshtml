@model IDCardBD.Web.Models.AcademicGroup

@{
    ViewData["Title"] = "Create Group";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create New Group</h3>
    </div>
    <form asp-action="Create">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter group name (e.g., Science)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId"></label>
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes">
                    <option value="">-- Select Class --</option>
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
