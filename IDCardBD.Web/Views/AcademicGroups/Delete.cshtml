@model IDCardBD.Web.Models.AcademicGroup

@{
    ViewData["Title"] = "Delete Group";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Delete Group</h3>
    </div>
    <div class="card-body">
        <p>Are you sure you want to delete this group?</p>
        <dl class="row">
            <dt class="col-sm-4">Group Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>
            <dt class="col-sm-4">Class Name</dt>
            <dd class="col-sm-8">@Model.Class?.Name</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
