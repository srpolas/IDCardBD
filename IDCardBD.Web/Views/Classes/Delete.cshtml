@model IDCardBD.Web.Models.SchoolClass

@{
    ViewData["Title"] = "Delete Class";
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Delete Class</h3>
            </div>
            <div class="card-body">
                <p>Are you sure you want to delete this class?</p>
                <dl class="row">
                    <dt class="col-sm-4">Class Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                </dl>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Warning: Deleting this class will also delete all associated sections.
                </div>
            </div>
            <div class="card-footer text-right">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
