
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IDCardBD</title>
    
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="hold-transition @(User.Identity?.IsAuthenticated == true ? "sidebar-mini" : "layout-top-nav")">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <div class="@(User.Identity?.IsAuthenticated == true ? "container-fluid" : "container") d-flex align-items-center w-100">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="/" class="navbar-brand">
                                <span class="brand-text font-weight-light"><b>IDCardBD</b> CMS</span>
                            </a>
                        </li>
                    }
                </ul>

                <!-- Right navbar links -->
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item d-none d-sm-inline-block">
                            <span class="nav-link text-dark">Hello, @User.Identity.Name!</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="nav-link btn btn-link text-danger">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Register" class="nav-link btn btn-primary text-white ml-2">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        <!-- /.navbar -->

        @if (User.Identity?.IsAuthenticated == true)
        {
            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/" class="brand-link">
                    <span class="brand-text font-weight-light">IDCardBD CMS</span>
                </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        
                         <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-info-circle"></i>
                                    <p>
                                        Class & Section info
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Classes" asp-action="Index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Class</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Sections" asp-action="Index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Section</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="AcademicGroups" asp-action="Index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Group</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Students" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-user-graduate"></i>
                                    <p>Student Management</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Teachers" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-chalkboard-teacher"></i>
                                    <p>Teacher Management</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Employees" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-user-tie"></i>
                                    <p>Employee Management</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Design" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-paint-brush"></i>
                                    <p>Design Center</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Print" asp-action="Queue" class="nav-link">
                                    <i class="nav-icon fas fa-print"></i>
                                    <p>Print Queue</p>
                                </a>
                            </li>
                        }

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        }

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="@(User.Identity?.IsAuthenticated == true ? "container-fluid" : "container")">
                   @* Optional Header Content can go here *@
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content">
                <div class="@(User.Identity?.IsAuthenticated == true ? "container-fluid" : "container")">
                    @RenderBody()
                </div>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="@(User.Identity?.IsAuthenticated == true ? "container-fluid" : "container")">
                <div class="float-right d-none d-sm-inline">
                    IDCardBD System
                </div>
                <strong>Copyright &copy; @DateTime.Now.Year.</strong> All rights reserved.
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
