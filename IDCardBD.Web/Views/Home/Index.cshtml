@{
    ViewData["Title"] = "Welcome to IDCardBD";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-4 font-weight-bold">IDCardBD CMS <span class="text-primary">v1.0</span></h1>
            <p class="lead text-muted">A complete solution for Student, Teacher, and Employee ID Card management, design, and printing.</p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-4 mr-2">Login to CMS</a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-lg px-4">Create Account</a>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <i class="fas fa-id-card fa-10x text-primary shadow-sm p-4 rounded-circle bg-white"></i>
        </div>
    </div>

    <hr class="my-5">

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="p-3 shadow-sm rounded h-100 bg-white">
                <i class="fas fa-users fa-3x text-info mb-3"></i>
                <h3>Identity Management</h3>
                <p>Easily manage Students, Teachers, and Employees with specialized fields, profile pictures, and academic streams (Groups/Sections).</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-3 shadow-sm rounded h-100 bg-white">
                <i class="fas fa-paint-brush fa-3x text-warning mb-3"></i>
                <h3>Design Center</h3>
                <p>Create professional ID card templates. Upload custom backgrounds for Front and Back sides and activate them with one click.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-3 shadow-sm rounded h-100 bg-white">
                <i class="fas fa-print fa-3x text-success mb-3"></i>
                <h3>Print Queue</h3>
                <p>Seamlessly track card processing from "Sent to Print" to "Ready for Delivery" with automated PDF generation.</p>
            </div>
        </div>
    </div>

    <div class="bg-light p-5 rounded mt-5">
        <h2 class="text-center mb-4">User Roles & Instructions</h2>
        <div class="row">
            <div class="col-md-6 border-right">
                <h4 class="text-info"><i class="fas fa-user-edit"></i> Data Entry User</h4>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Add/Edit Students, Teachers, and Employees.</li>
                    <li><i class="fas fa-check text-success"></i> Upload profile pictures and manage academic info.</li>
                    <li><i class="fas fa-check text-success"></i> Push multiple identities to the <b>Print Queue</b>.</li>
                </ul>
            </div>
            <div class="col-md-6 pl-md-4">
                <h4 class="text-primary"><i class="fas fa-user-shield"></i> Administrator</h4>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Everything a Data Entry user can do.</li>
                    <li><i class="fas fa-check text-success"></i> Manage <b>Classes, Sections, and Groups</b>.</li>
                    <li><i class="fas fa-check text-success"></i> <b>Design Center</b>: Manage card templates.</li>
                    <li><i class="fas fa-check text-success"></i> <b>Final Processing</b>: Mark cards as "Printed" or "Delivered".</li>
                </ul>
            </div>
        </div>
    </div>
</div>
